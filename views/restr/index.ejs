<% layout('layout/boilerplate') %>
    <h1>All Restraunts</h1>
    <div><a href="/restr/new">Add a restaurant</a></div>
    <% for(let rest of rests){ %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=rest.image%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= rest.title %> </h5>
                        <p class="card-text"><%= rest.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= rest.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/restr/<%=rest._id%>">View <%=rest.title%></a>
                    </div>
                </div>
            </div>
        </div>  
    <% }%>
